{
    "build": { 
        "dockerfile": "Dockerfile", 
        "context": "."
    },
    "postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "postStartCommand": "luarocks make --local --server rocks",
    "customizations": {
        "vscode": {
            "settings": {
                "files.associations": {
                    "*.rockspec" : "lua"
                }
            },
            "extensions": [
                "github.vscode-github-actions"
            ]
        }
    }
}